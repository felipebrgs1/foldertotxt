{
  "name": "codetotext",
  "publisher": "CodeToText",
  "repository": "https://github.com/felipebrgs1",
  "license": "MIT",
  "displayName": "CodeToText",
  "description": "Transforma arquivos de pastas em um único txt",
  "icon": "vec.png",
  "version": "0.0.6",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:fileTreeView",
    "onCommand:extension.concatenateSelectedFiles",
    "onCommand:extension.toggleSelection"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "colors": [
      {
        "id": "myExtension.buttonGreen",
        "description": "Cor verde para o botão de concatenação",
        "defaults": {
          "dark": "#4CAF50",
          "light": "#4CAF50",
          "highContrast": "#4CAF50"
        }
      }
    ],
    "commands": [
      {
        "command": "extension.concatenateButton",
        "title": "Concatenar Arquivos",
        "icon": {
          "light": "$(check)",
          "dark": "$(check)"
        }
      },
      {
        "command": "extension.concatenateSelectedFiles",
        "title": "Concatenar Arquivos",
        "icon": "$(combine)"
      },
      {
        "command": "extension.toggleSelection",
        "title": "Alternar Seleção"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codetotext-explorer",
          "title": "CodeToText",
          "icon": "vec.png"
        }
      ]
    },
    "views": {
      "codetotext-explorer": [
        {
          "id": "fileTreeView",
          "name": "Arquivos para Concatenar",
          "when": "workspaceFolderCount != 0",
          "icon": "vec.png"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "extension.concatenateSelectedFiles",
          "when": "view == fileTreeView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "extension.toggleSelection",
          "when": "view == fileTreeView",
          "group": "inline"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.concatenateSelectedFiles",
        "key": "ctrl+shift+c",
        "when": "view == fileTreeView"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
